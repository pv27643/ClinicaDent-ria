# Example environment variables for backend (Postgres)

# Use either DATABASE_URL or the DB_* set
# DATABASE_URL=postgres://user:password@localhost:5432/clinicadent_db

DB_HOST=localhost
DB_PORT=5432
DB_NAME=clinicadent_db
DB_USER=clinic_user
DB_PASSWORD=changeme

# App settings
PORT=3001
JWT_SECRET=change_this_secret
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES_DAYS=30

# For local development you can force the in-memory mock DB
# Set to 1 to use the mocked DB (useful for frontend development without Postgres)
FORCE_DB_MOCK=0
# Exemplo de ficheiro .env para ligar ao PostgreSQL (pgAdmin)
# Não comite o ficheiro .env com credenciais reais para o repositório.

# Host ou IP do servidor PostgreSQL
DB_HOST=localhost

# Porta (padrão PostgreSQL é 5432)
DB_PORT=5432

# Nome da base de dados
DB_NAME=db_abd

# Utilizador do PostgreSQL
DB_USER=postgres

# Password do utilizador
DB_PASSWORD=Abcd2425

DATABASE_URL=
# Exemplo gerado a partir das variáveis acima:
DATABASE_URL=postgres://postgres:Abcd2425@localhost:5432/db_abd


